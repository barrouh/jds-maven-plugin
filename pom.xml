	<groupId>com.barrouh.plugins</groupId>
	<artifactId>jds-maven-plugin</artifactId>
	<packaging>maven-plugin</packaging>
	<version>1.0-SNAPSHOT</version>

    <name>JDS Maven Plugin</name>
	<url>https://github.com/barrouh/jds-maven-plugin</url>
	<description>

    </description>

	<developers>
		<developer>
			<name>Mohamed Barrouh</name>
			<email>mohamed.barrouh@gmail.com</email>
			<organization>com.github.barrouh</organization>
			<organizationUrl>http://github.com/barrouh/</organizationUrl>
		</developer>
	</developers>

	<licenses>
		<license>
			<name>MIT License</name>
			<url>http://www.opensource.org/licenses/mit-license.php</url>
		</license>
	</licenses>

	<scm>
		<connection>scm:git:git://github.com/barrouh/jds-maven-plugin.git</connection>
		<developerConnection>scm:git:ssh://github.com:barrouh/jds-maven-plugin.git</developerConnection>
		<url>http://github.com/barrouh/jds-maven-plugin</url>
	</scm>

	<properties>
		<project.build.sourceEncoding>UTF-8</project.build.sourceEncoding>
